# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_endpoint_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# HubSpot Configuration
HUBSPOT_PRIVATE_APP_TOKEN=pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# HubSpot Webhook Configuration
# Get this secret from HubSpot when setting up webhooks in your private app
HUBSPOT_WEBHOOK_SECRET=your_webhook_secret_here

# HubSpot Pipeline & Stage Configuration (Optional - defaults to 'default' pipeline)
# Get these IDs from your HubSpot pipeline settings
HUBSPOT_PIPELINE_ID=default
HUBSPOT_STAGE_READY=appointmentscheduled
HUBSPOT_STAGE_ASSIGNED=qualifiedtobuy
HUBSPOT_STAGE_PICKED_UP=presentationscheduled
HUBSPOT_STAGE_DELIVERED=closedwon
HUBSPOT_STAGE_CANCELED=closedlost

# HubSpot Custom Properties (Optional - if you've created custom fields)
# These map your internal order fields to HubSpot custom property names

# Core Tracking Properties
HUBSPOT_PROP_DEAL_PIPELINE=deal_pipeline          # Dropdown: Quote Sent, Paid, Assigned, Delivered, Completed
HUBSPOT_PROP_DELIVERY_STATUS=delivery_status      # Dropdown: pending, assigned, in_transit, delivered, exception

# Order Properties
HUBSPOT_PROP_ORDER_ID=order_id
HUBSPOT_PROP_PICKUP_ADDRESS=pickup_address
HUBSPOT_PROP_DROPOFF_ADDRESS=dropoff_address
HUBSPOT_PROP_DISTANCE_MILES=distance_miles

# Time Properties (Date and time pickers)
HUBSPOT_PROP_ACTUAL_DELIVERY_TIME=actual_delivery_time
HUBSPOT_PROP_ACTUAL_PICKUP_TIME=actual_pickup_time
HUBSPOT_PROP_SCHEDULED_DELIVERY_TIME=scheduled_delivery_time
HUBSPOT_PROP_SCHEDULED_PICKUP_TIME=scheduled_pickup_time

# Driver/Vehicle Properties
HUBSPOT_PROP_ASSIGNED_DRIVER=assigned_driver      # Single-line text
HUBSPOT_PROP_DRIVER_NAME=driver_name              # Single-line text (backward compatibility)
HUBSPOT_PROP_DRIVER_PHONE=driver_phone            # Phone number
HUBSPOT_PROP_VEHICLE_TYPE=vehicle_type            # Dropdown: car, van, box_truck, cargo_van, bike, scooter

# Delivery Detail Properties
HUBSPOT_PROP_DELIVERY_LOCATION=delivery_location  # Single-line text
HUBSPOT_PROP_DELIVERY_ROUTE=delivery_route        # Single-line text
HUBSPOT_PROP_DELIVERY_TYPE=delivery_type          # Dropdown: standard, express, same_day, scheduled
HUBSPOT_PROP_WEIGHT_BRACKET=weight_bracket        # Dropdown: light, medium, heavy, oversized
HUBSPOT_PROP_SPECIAL_DELIVERY_INSTRUCTIONS=special_delivery_instructions  # Multi-line text

# Exception Properties
HUBSPOT_PROP_DELIVERY_EXCEPTION_NOTES=delivery_exception_notes           # Multi-line text
HUBSPOT_PROP_DELIVERY_EXCEPTION_TYPE=delivery_exception_type             # Dropdown: weather, address_issue, delay, etc.
HUBSPOT_PROP_DELIVERY_RESOLUTION_STATUS=delivery_resolution_status       # Dropdown: resolved, unresolved, escalated, etc.

# Quote Properties
HUBSPOT_PROP_QUOTE_SENT=quote_sent                # Radio select: true/false
HUBSPOT_PROP_QUOTE_SOURCE=quote_source            # Dropdown: website, phone, email, referral, partner, other
HUBSPOT_PROP_QUOTE_STATUS=quote_status            # Dropdown: sent, pending, accepted, declined, expired
HUBSPOT_PROP_RECURRING_FREQUENCY=recurring_frequency  # Dropdown: ad_hoc, daily, weekly, biweekly, monthly
HUBSPOT_PROP_RUSH_REQUESTED=rush_requested        # Single checkbox: true/false
HUBSPOT_PROP_SERVICES_PROPOSED=services_proposed  # Multi-line text
HUBSPOT_PROP_SNAPSHOT_AUDIT_SENT=snapshot_audit_sent  # Multiple checkboxes

# HubSpot Schema Cache Settings (Optional)
HUBSPOT_SCHEMA_CACHE_TTL=3600        # Cache duration in seconds (default: 1 hour)
HUBSPOT_SCHEMA_CACHE_ENABLED=true    # Enable/disable caching (default: true)

# Sentry Configuration (optional - only if you want error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags (optional)
FEATURE_WEBHOOK_DEDUPE=true
FEATURE_RATE_LIMITING=true

# Deployment (automatically set by Vercel - DO NOT set manually)
VERCEL_URL=your_vercel_deployment_url

# Base URLs (REQUIRED for production - set to your actual domain)
# Used for authentication redirects and email links
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Google Maps API Key (REQUIRED for quote form to work)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_API_KEY=

# VAPID Keys for Web Push Notifications
# Generate with: node scripts/generate-vapid-keys.js
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Twilio SMS (optional)
# Provide either TWILIO_FROM_NUMBER or TWILIO_MESSAGING_SERVICE_SID
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_MESSAGING_SERVICE_SID=

# Demo Mode (DEVELOPMENT ONLY - NEVER ENABLE IN PRODUCTION)
# Set to "true" to enable role switching without authentication
NEXT_PUBLIC_DEMO_MODE=false
